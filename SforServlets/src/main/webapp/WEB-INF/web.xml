<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd"
         id="WebApp_ID"
         version="6.0">

    <display-name>SforServlets</display-name>

    <!-- First Servlet Configuration -->
    <servlet>
        <servlet-name>FirstServlet1</servlet-name>
        <servlet-class>first.FirstServlet1</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FirstServlet1</servlet-name>
        <url-pattern>/FirstServlet1</url-pattern>
    </servlet-mapping>

    <!-- Second Servlet Configuration -->
    <servlet>
        <servlet-name>SecondServlet2</servlet-name>
        <servlet-class>first.SecondServlet2</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SecondServlet2</servlet-name>
        <url-pattern>/SecondServlet2</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
